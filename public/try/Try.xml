<?xml version="1.0"?>
<try:TryClass xmlns="http://www.w3.org/1999/xhtml"
              xmlns:js="js.core" xmlns:ui="js.ui" xmlns:try="try"
        >

    <header id="header">
        <div class="branding">
            Try <span>&lt;rAppid:js /&gt;</span>
        </div>
        <div class="actions">
            <ul>
                <li class="run">
                    <a onclick="run">Run</a>
                </li>
                <li class="save">
                    <a>Save</a>
                </li>
            </ul>
        </div>
    </header>

    <div id="wrapper">
        <div id="sidebar">
            <div>
                <a onclick="addNewFile">+</a>
            </div>
            <ui:SelectionView items="{files}" itemKey="file" class="files">
                <js:Template name="item">
                    <div class="{file.extension()}">
                        <a onclick="openFile(file)">{file.path}</a>
                    </div>
                </js:Template>
            </ui:SelectionView>
        </div>
        <div id="content">

            <div class="left">
                <div class="files">
                    <ui:TabView selectedTab="{{selectedTab}}" cid="openFilesTabView">
                        <js:Repeat items="{openFiles}" itemKey="file">
                            <ui:Tab title="{file.path}" _file="{file}">
                                <textarea>{{file.content}}</textarea>
                            </ui:Tab>
                        </js:Repeat>
                    </ui:TabView>
                </div>
            </div>

            <div class="right">
                <div id="result" cid="result"/>
            </div>

        </div>
    </div>

    <js:Template cid="contentFrameTemplate" name="contentFrame">
        <iframe sandbox="allow-forms allow-pointer-lock allow-popups allow-same-origin allow-scripts"/>
    </js:Template>

</try:TryClass>