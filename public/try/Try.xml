<?xml version="1.0"?>
<try:TryClass xmlns="http://www.w3.org/1999/xhtml"
                xmlns:js="js.core" xmlns:ui="js.ui" xmlns:try="try"
                xmlns:conf="js.conf">

    <js:Router cid="router">
        <!--<conf:RouteConfiguration route="^$" onexec="defaultRoute"/>-->
    </js:Router>

    <header id="header">
        <div class="branding">
            Try
        </div>
        <div class="actions">
            <ul>
                <li class="run">
                    <a onclick="run">Run</a>
                </li>
                <li class="save">
                    <a>Save</a>
                </li>
            </ul>
        </div>
    </header>

    <div id="wrapper">
        <div id="sidebar">
            Files
        </div>
        <div id="content">

            <div class="left">
                <div class="files">
                    <ui:TabView>
                        <js:Repeat items="{openFiles}" itemKey="file">
                            <ui:Tab title="{file.path}">
                                <textarea>{{file.content}}</textarea>
                            </ui:Tab>
                        </js:Repeat>
                    </ui:TabView>
                </div>
            </div>

            <div class="right">
                <div id="result" cid="result"/>
            </div>

        </div>
    </div>

    <js:Template cid="contentFrameTemplate" name="contentFrame">
        <iframe sandbox="allow-forms allow-pointer-lock allow-popups allow-same-origin allow-scripts"/>
    </js:Template>

</try:TryClass>